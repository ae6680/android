<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calculator_numpad"
    android:background="@color/calculator_numpad_background"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:weightSum="4"
    android:layout_width="@dimen/calculator_numpad_width"
    android:layout_height="@dimen/calculator_numpad_height">

    <RelativeLayout
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/numpad_number_7"
            android:text="7"
            style="@style/calculator_number"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/numpad_number_8"
            android:text="8"
            style="@style/calculator_number"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/numpad_number_9"
            android:text="9"
            style="@style/calculator_number"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/numpad_number_4"
            android:text="4"
            style="@style/calculator_number"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/numpad_number_5"
            android:text="5"
            style="@style/calculator_number"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/numpad_number_6"
            android:text="6"
            style="@style/calculator_number"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/numpad_number_1"
            android:text="1"
            style="@style/calculator_number"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/numpad_number_2"
            android:text="2"
            style="@style/calculator_number"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/numpad_number_3"
            android:text="3"
            style="@style/calculator_number"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/numpad_comma"
                android:text=","
                style="@style/calculator_number"
                android:layout_marginTop="-8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/numpad_number_0"
            android:text="0"
            style="@style/calculator_number"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/numpad_backspace"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/backspace_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            </LinearLayout>

    </RelativeLayout>

</LinearLayout>

