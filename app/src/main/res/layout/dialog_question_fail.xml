<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/question_rounded"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_width="260dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_fail_title"
        android:text="@string/dialog_fail_title"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/dialog_title_font_size"
        android:textColor="@color/dialog_title_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/dialog_fail_message"
        android:textColor="@color/dialog_message_color"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dialog_answer"
        android:textSize="20sp"
        android:text="150,5"
        android:textColor="#383738"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/answer_button"
        android:background="@drawable/ok_rounded"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Volgende vraag"
        android:textColor="#fff"
        android:layout_marginEnd="67dp"
        android:layout_marginStart="67dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
