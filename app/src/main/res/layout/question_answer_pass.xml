<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card">

    <ImageView
        android:id="@+id/question_explanation_icon"
        android:src="@drawable/explanation_icon"
        android:layout_gravity="end"
        android:layout_marginTop="-6dp"
        android:padding="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <RelativeLayout
        android:id="@+id/question_answer_container"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/answer_title"
            android:text="@string/question_pass_title"
            style="@style/title" />

        <ImageView
            android:id="@+id/question_answer_icon"
            android:src="@drawable/check_icon"
            android:layout_below="@id/answer_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/answer_message"
            android:text="@string/question_pass_message"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/question_answer_icon"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/next_question_button"
            style="@style/primary_button"
            android:text="@string/next_question_text"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</FrameLayout>
