<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/calculator_results_background"
    android:gravity="end"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/results_equation"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/calculator_calculation_text"
        android:gravity="end"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/results_equation_answer"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/calculator_calculation_answer_text"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
