<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/question_rounded"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/question_title"
            android:text="@string/question_title"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/hint"
            android:src="@drawable/hint_icon"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:layout_toRightOf="@id/question_title"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/question"
            android:text="@string/first_question"
            android:layout_below="@id/question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/answer_button"
            android:background="@drawable/ok_rounded"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Geef antwoord"
            android:textColor="#fff"
            android:layout_below="@id/question"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/calculator_container"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</FrameLayout>
