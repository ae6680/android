<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginStart="@dimen/activity_gutter"
                android:layout_marginEnd="@dimen/activity_gutter"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/question_title"
        android:layout_marginTop="@dimen/primary_margin"
        android:layout_marginBottom="@dimen/primary_margin"
        android:textSize="@dimen/text_size_medium"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/question_text"
            android:layout_marginTop="@dimen/primary_margin"
            android:layout_below="@+id/question_title"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/approach_list"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/next_question_button"
        android:layout_marginTop="@dimen/primary_margin"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/next_question_button"
        style="@style/primary_button"
        android:text="Bevestig"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/primary_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
