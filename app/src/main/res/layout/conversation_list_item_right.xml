<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginTop="@dimen/conversation_entry_margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/conversation_entry_message"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="@dimen/primary_margin"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/conversation_entry_image"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/conversation_entry_image"
        android:src="@drawable/submit_button"
        android:layout_alignParentEnd="true"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

</RelativeLayout>
