<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingStart="@dimen/activity_gutter"
                android:paddingEnd="@dimen/activity_gutter"
                android:background="@drawable/background_bus_road"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/chosen_title"
        android:text="Gekozen"
        android:textSize="22sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/approach_list_mine"
        android:layout_marginTop="16dp"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/correct_title"
        android:text="Correct"
        android:textSize="22sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_above="@+id/approach_list_correct"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/approach_list_correct"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/next_question_button"
        android:layout_marginTop="16dp"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/next_question_button"
        style="@style/primary_button"
        android:text="Door naar de vraag."
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
