<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/toolbar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/card"
        android:id="@+id/question_text"
        android:padding="@dimen/primary_margin"
        android:textSize="@dimen/text_size_normal"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/selected_part_text_view"
        android:layout_margin="@dimen/primary_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/selected_part_text_view"
        android:text="Stap 1"
        android:textSize="22sp"
        android:textColor="@color/text_tertiair"
        android:scrollbars="vertical"
        android:maxLines="18"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/feedback_view_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.shinav.mathapp.questionApproach.feedback.QAFViewPager
        android:id="@+id/feedback_view_pager"
        android:layout_above="@+id/step_indicator_container"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/step_indicator_container"
        android:layout_above="@id/next_question_button"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/pass_view_pager_indicator"
            android:layout_marginEnd="12dp"
            android:layout_width="35dp"
            android:layout_height="35dp">

            <TextView
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/fail_view_pager_indicator"
            android:layout_width="35dp"
            android:layout_height="35dp">

            <TextView
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/next_question_button"
        style="@style/primary_button"
        android:text="@string/question_approach_feedback_next_button"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
