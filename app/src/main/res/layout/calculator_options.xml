<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/calculator_options_background"
    android:layout_alignParentEnd="true"
    android:weightSum="2"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="4"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/calculator_options_square_root"
            style="@style/calculator_options"
            android:layout_weight="1"
            android:text="√"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/calculator_options_divide"
            style="@style/calculator_options"
            android:layout_weight="1"
            android:text="÷"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/calculator_options_subtraction"
            style="@style/calculator_options"
            android:layout_weight="1"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/calculator_options_parenthesis"
            style="@style/calculator_options"
            android:layout_weight="1"
            android:text="( )"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="4"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/calculator_options_power_of"
            style="@style/calculator_options"
            android:layout_weight="1"
            android:text="^"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/calculator_options_multiply"
            style="@style/calculator_options"
            android:layout_weight="1"
            android:text="×"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/calculator_options_addition"
            style="@style/calculator_options"
            android:layout_weight="1"
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/calculator_options_equals"
            style="@style/calculator_options"
            android:layout_weight="1"
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

    </LinearLayout>


</LinearLayout>
