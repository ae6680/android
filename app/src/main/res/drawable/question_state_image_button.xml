<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto">

    <item
        app:state_opened="true"
        android:drawable="@drawable/question_progress_state_opened"/>

    <item
        app:state_passed="true"
        android:drawable="@drawable/question_progress_state_passed"/>

    <item
        app:state_failed="true"
        android:drawable="@drawable/question_progress_state_failed"/>

    <item
        app:state_closed="true"
        android:drawable="@drawable/question_progress_state_closed"/>

</selector>
